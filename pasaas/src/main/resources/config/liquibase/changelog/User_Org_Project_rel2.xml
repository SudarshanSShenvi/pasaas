<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>
    <property name="now" value="GETDATE()" dbms="mssql"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle,mssql"/>
	<!--
        Custom relationship tables
    -->
    <changeSet id="User_Org_Project_rel-1" author="sudi">
        
		<createTable tableName="pa_user_organization">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="organization_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addPrimaryKey columnNames="user_id, organization_id" tableName="pa_user_organization"/>
        
        <addForeignKeyConstraint baseColumnNames="organization_id"
                                 baseTableName="pa_user_organization"
                                 constraintName="fk_organization_id"
                                 referencedColumnNames="id"
                                 referencedTableName="pa_organization"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="pa_user_organization"
                                 constraintName="fk_user_org_id"
                                 referencedColumnNames="id"
                                 referencedTableName="pa_user"/>
        
		<createTable tableName="pa_user_project">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="project_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="user_id, project_id" tableName="pa_user_project"/>

        <addForeignKeyConstraint baseColumnNames="project_id"
                                 baseTableName="pa_user_project"
                                 constraintName="fk_project_id"
                                 referencedColumnNames="id"
                                 referencedTableName="pa_project"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="pa_user_project"
                                 constraintName="fk_user_pro_id"
                                 referencedColumnNames="id"
                                 referencedTableName="pa_user"/> 

        <loadData encoding="UTF-8"
                  file="config/liquibase/users-2.csv"
                  separator=";"
                  tableName="pa_user">
            <column name="activated" type="boolean"/>
            <column name="created_date" type="timestamp" defaultValueDate="now()"/>
        </loadData>
        <!-- <dropDefaultValue tableName="pa_user" columnName="created_date" columnDataType="datetime"/> -->

        <loadData encoding="UTF-8"
                  file="config/liquibase/authorities-2.csv"
                  separator=";"
                  tableName="pa_authority"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/users_authorities-2.csv"
                  separator=";"
                  tableName="pa_user_authority"/>
                  
        <loadData encoding="UTF-8"
                  file="config/liquibase/businessplan.csv"
                  separator=";"
                  tableName="pa_businessplan"/>
                  
        <loadData encoding="UTF-8"
                  file="config/liquibase/organization.csv"
                  separator=";"
                  tableName="pa_organization"/>
                  
        <loadData encoding="UTF-8"
                  file="config/liquibase/users_organization.csv"
                  separator=";"
                  tableName="pa_user_organization"/>
  </changeSet>

</databaseChangeLog>
